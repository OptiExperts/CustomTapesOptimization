<div class="page-width">
{% if section.settings.html_code != blank %}
  <div class="top_details">
    {{ section.settings.html_code }}
  </div>
{% endif %}

<div class="categories_block">
  {% for block in section.blocks %}
    <div class="categories_box">
      	{% if block.settings.image != blank %}
      		<div class="cate_img"><img class="lazy2" data-src="{{ block.settings.image | img_url: '600x' }}" alt=""></div>
        {% endif %}
        <div class="categories_details">
          {% if block.settings.cta_label != blank %}
          	<h3>{{ block.settings.cta_label | escape }}</h3>
          {% endif %}

          {% if block.settings.html_code != blank %}
            <div class="html_code">
              {{ block.settings.html_code }}
            </div>
          {% endif %}

          {% if block.settings.link_btn != blank %}
          	<a class="btn shop_btn" href="{{ block.settings.link }}">{{ block.settings.link_btn | escape }}</a>
          {% endif %}
        </div>
    </div>
  {% endfor %}
</div>
</div>
{% schema %}
  {
    "name": "Categories Section",
    "class": "categories_section",
    "max_blocks": 9,
    "settings": [
      {
        "type": "html",
        "id": "html_code",
        "label": "HTML Code"
      }
    ],
    "blocks": [
      {
        "type": "image",
        "name": "Image",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "cta_label",
            "label": "Main Title"
          },
		  {
            "type": "html",
            "id": "html_code",
            "label": "HTML"
          },
          {
            "type": "text",
            "id": "link_btn",
            "label": "Shop"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link",
            "info": "Optional"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Categories Section",
        "category": "Home",
        "blocks": [
          {
            "type": "image"
          }
        ]
      }
    ]
  }
{% endschema %}
